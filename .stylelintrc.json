{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-order-config-standard"
  ],
  "plugins": [
    "stylelint-order"
  ],
  "rules": {
    "indentation": 2,
    "color-hex-case": "upper",
    "color-hex-length": "short",
    "color-named": "never",
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extends",
          "tailwind"
        ]
      }
    ]
  }
}
